* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    font-size: 14px;
    /* overflow: hidden; */
}

html,
body {
    width: 100%;
    min-height: 100%;
    height: 100%;
    /* overflow-y: auto; */
    overflow-x: hidden;
    margin: 0;
    padding: 0;
}

html {
    /* -ms-text-size-adjust: 100%; */
    /* -webkit-text-size-adjust: 100%; */
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

li,
ul,
dl,
dt,
dd {
    list-style: none;
    margin: 0;
    padding: 0;
}

body,
button,
input,
select,
textarea,
img {
    font-family: "microsoft yahei", Helvetica, Arial, sans-serif;
    outline: 0;
    color: #000;
}

img {
    vertical-align: middle;
}

body {
    min-width: 320px;
    background: #fff;
    overflow: hidden;
    height: 100%;
}

#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    text-align: center;
    color: #2c3e50;
}

.clearfix:after {
    content: " ";
    display: block;
    visibility: hidden;
    line-height: 0;
    clear: both;
    height: 0;
}

.clearfix {
    zoom: 1;
}